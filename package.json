{
  "publisher": "takline",
  "name": "prettier-eslint-modern",
  "displayName": "Prettier ESLint Modern",
  "version": "1.0.2",
  "private": true,
  "description": "A fork of vs-code-prettier-eslint focused on compatibility with newer toolchains and improved reliability.",
  "license": "MIT",
  "author": "takline",
  "icon": "icon.png",
  "scripts": {
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "pretest": "bun run lint && bun run typecheck",
    "test": "tsc -p . && node ./dist/test/runTest.js",
    "vscode:prepublish": "bun run build",
    "build:dev": "bun run build:extension && bun run build:worker",
    "build": "bun run build:extension --minify && bun run build:worker --minify",
    "build:extension": "esbuild ./src/extension.ts --bundle --sourcemap --platform=node --target=node18 --external:vscode --external:./worker.mjs --outfile=./dist/extension.js",
    "build:worker": "esbuild ./src/worker.ts --bundle --sourcemap --platform=node --format=esm --target=node18 --banner:js=\"import { createRequire } from 'module'; import { fileURLToPath } from 'url'; import { dirname } from 'path'; const require = createRequire(import.meta.url); const __filename = fileURLToPath(import.meta.url); const __dirname = dirname(__filename);\" --outfile=./dist/worker.mjs",
    "package:dev": "bun run build:dev && vsce package --no-dependencies",
    "package": "bun run build && vsce package --no-dependencies",
    "publish:local": "vsce publish --no-dependencies",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "galleryBanner": {
    "color": "#09090b",
    "theme": "dark"
  },
  "keywords": [
    "eslint",
    "prettier",
    "prettier-eslint",
    "multi-root ready",
    "flat-config",
    "modern"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/takline/prettier-eslint-modern"
  },
  "bugs": {
    "url": "https://github.com/takline/prettier-eslint-modern/issues"
  },
  "engines": {
    "vscode": "^1.93.0",
    "node": "^20.0.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Formatters"
  ],
  "sponsor": {
    "url": "https://github.com/sponsors/takline"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:graphql",
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:json",
    "onLanguage:jsonc",
    "onLanguage:less",
    "onLanguage:markdown",
    "onLanguage:mdx",
    "onLanguage:scss",
    "onLanguage:svelte",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:yaml",
    "onStartupFinished"
  ],
  "devDependencies": {
    "@auto-it/exec": "^11.3.6",
    "@auto-it/first-time-contributor": "^11.3.6",
    "@auto-it/released": "^11.3.6",
    "@auto-it/upload-assets": "^11.3.6",
    "@auto-it/vscode": "^11.3.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.93.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "all-contributors-cli": "^6.26.1",
    "auto": "^11.3.6",
    "esbuild": "^0.27.2",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "ovsx": "^0.10.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "eslint": "^9.39.2",
    "find-up": "^8.0.0",
    "ignore": "^7.0.5",
    "prettier": "^3.7.4"
  },
  "dependencies": {},
  "contributes": {
    "configuration": {
      "title": "Prettier ESLint Modern",
      "properties": {
        "prettier-eslint-modern.prettierLast": {
          "type": "boolean",
          "default": false,
          "description": "Run Prettier Last"
        }
      }
    }
  }
}